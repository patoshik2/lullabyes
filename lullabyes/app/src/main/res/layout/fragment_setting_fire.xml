<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorGray"

    tools:context="com.eguo.lullabyes.Fragments.SettingFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_taile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/AppTheme.PopupOverlay">



            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/taile_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ellipsize="end"
                android:gravity="left|center"

                android:maxLines="13"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Настройки"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                app:robotoFontFamily="roboto"

                app:robotoTextWeight="medium" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <Button
        android:id="@+id/accountkabinet"
        android:layout_width="120dp"
        android:layout_height="wrap_content"


        android:layout_marginTop="32dp"
        android:background="@drawable/button_style"
        android:text="аккаунт"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billding"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/opent_login_act"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="16dp"
        android:background="@drawable/button_style"
        android:text="Войти"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/about_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/exit_to_account"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="64dp"
        android:background="@drawable/button_style"
        android:text="Выход"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/about_app"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="16dp"
        android:background="@drawable/button_style"
        android:text="О нас"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/exit_to_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/went_activ_newpostsend"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:text="Модератор"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountkabinet"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/billding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_style"
        android:padding="8dp"
        android:text="VIP подписка всего за 99руб"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_setting" />


</androidx.constraintlayout.widget.ConstraintLayout>
